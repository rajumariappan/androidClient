<CreateWalletScreen>:
    canvas.before:
        Color:
            rgb: .6, .6, .6
        Rectangle:
            size: self.size
            source: 'img/background.png'
    FloatLayout:
        Image:
            source: 'img/appicon.png'
            pos_hint: {'x': 0, 'y': root.y - .3}
        Label:
            halign: 'center'
            text: "LEVERAGING THE POWER OF THE BLOCKCHAIN"
            pos_hint: {'x': 0, 'y': root.y - .45}
            font_size: '12sp'
        Label:
            halign: 'center'
            text: "W   A   I   T   I   N   G            F   O   R            S   A   T   O   S   H   I"
            pos_hint: {'x': 0, 'y': root.y - .48}
            font_size: '8sp'
        Label:
            halign: 'center'
            text: "PASSWORD PROTECT YOUR SECRET IDENTITY"
            pos_hint: {'x': 0, 'y': root.y + .32}
            font_size: '32sp'
        Label:
            text: "Password:"
            pos_hint: {'x': .07, 'y': .68}
            size_hint: .32, .06
            halign: 'right'
            font_size: '20sp'
        TextInput:
            id: password
            pos_hint: {'x': .30, 'y': .68}
            size_hint: .5, .06
            password: 'true'
            font_size: '20sp'
        Label:
            text: "Verify Password:"
            pos_hint: {'x': .075, 'y': .6}
            size_hint: .24, .06
            halign: 'right'
            font_size: '20sp'
        TextInput:
            id: retype_password
            pos: 400, 500
            pos_hint: {'x': .30, 'y': .6}
            size_hint: .5, .06
            password: 'true'
            font_size: '20sp'
        ActionBar:
            pos_hint: {'x': .0, 'y': .92}
            background_color: [0,0,0,1]
            ActionView:
                use_separator: True
                ActionPrevious:
                    app_icon:'img/logo.png'
                    title: 'CLAIMS-BASED IP PROTECTION'
                    with_previous: False
                    on_press: root.go_home()
                ActionOverflow:
                ActionButton:
                    icon:''
                    disabled: True
                ActionButton:
                    icon:'img/next-disabled.png'
                    text: 'Next'
                    on_press: root.create_wallet_callback()